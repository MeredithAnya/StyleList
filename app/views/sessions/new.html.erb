<div class="signin">
  <h2>Sign In</h2>
  <% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <p>Uh Oh! <%= error %></p>
  <% end %>
  <% end %>


  <form class="signin-form" action="<%= session_url %>" method="post">
    <%= auth_token_input %>

    <label class="signin-label">
      Email
      <input class="signin-input" type="text" name="user[email]" value="">
    </label>

    <label class="signin-label">
      Password
      <input class="signin-input" type="password" name="user[password]" value="">
    </label>

    <input class="signin-submit" type="submit" value="Sign In">
  </form>
</div>
