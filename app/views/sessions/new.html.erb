<span class="logo-signin">StyleList</span>
<div class="signin">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p>Uh Oh! <%= error %></p>
    <% end %>
  <% end %>


  <form class="signin-form" action="<%= session_url %>" method="post">
    <%= auth_token_input %>
    <div class="signin-labels">
      <p class="signin-title">Welcome Back</p>
      <input class="signin-input" type="text" name="user[email]" placeholder="Email" value="">
      <input class="signin-input" type="password" name="user[password]" placeholder="Password" value="">
      <input class="signin-submit" type="submit" value="Sign In">
    </div>
    <%= link_to "I don't have an account yet", new_user_url, class: "signin-link" %>
  </form>
</div>
