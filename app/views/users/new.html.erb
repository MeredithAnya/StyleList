<span class="logo"><h1>StyleList</h1></span>
<div class="signup">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <form class="signup-form" action="<%= users_url %>" method="post">
    <%= auth_token_input %>

    <label class="signup-label">
      Name
      <input class="signup-input" type="text" name="user[name]" value="<%= @user.name %>">
    </label>

    <label class="signup-label">
      Email
      <input class="signup-input" type="text" name="user[email]" value="<%= @user.email %>">
    </label>

    <label class="signup-label">
      Password
      <input class="signup-input" type="password" name="user[password]" value="">
    </label>

    <label class="signup-label">
      Zipcode
      <input class="signup-input" type="text" name="user[zipcode]" value="<%= @user.zipcode %>">
    </label>
    <label class="signup-label">
      Do you get cold too easily...
      <%= radio_button("user", "temp_offset", -5) %>
      Usually happy as a clam...
      <%= radio_button("user", "temp_offset", 0) %>
      Or warm too easily?
      <%= radio_button("user", "temp_offset", 5) %>
    </label>

    <input class="signup-submit" type="submit" value="Sign Up">
  </form>
</div>
